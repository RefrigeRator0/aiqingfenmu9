#define _CRT_SECURE_NO_WARNINGS 1//尽量开头引用，防止出错
#include <stdio.h>//引用数据库函数
void bubble_sort(int arr[], int sz)
{
	int i = 0;
	int flag = 1;
	for (i = 0; i < sz - 1; i++)
	{
		int j = 0;
		for (j = 0; j < sz - 1 - i; j++)
		{
			int tmp = 0;
			if (arr[j] > arr[j + 1])
			{
				tmp=arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = tmp;
				flag = -1;
			}
		}
		if (flag == 1)
		{
			break;
		}
	}
	
}
int main()
{
	int arr[] = { 9,8,7,6,5,4,3,2,1,0 };
	int sz = sizeof(arr) / sizeof(arr[0]);
	bubble_sort(arr,sz);
	int i = 0;
	for (i = 0; i < sz; i++)
	{
		printf("%d ", arr[i]);
	}

}
